	<?php if ($block->getIsTwitterEnabled()):?>
		<li><a href="https://twitter.com/share?text=<?php echo $block->escapeHtml($productName); ?>&url=<?php echo urlencode($block->escapeUrl($currentUrl)); ?>" target="_blank"><i class="fab fa-twitter"></i></a></li>
