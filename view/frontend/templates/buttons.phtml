	<?php if ($block->getIsPinterestEnabled()):?>
		<li><a href="http://pinterest.com/pin/create/button/?url=<?php echo urlencode($block->escapeUrl($currentUrl)); ?>&description=<?php echo $productName; ?>" target="_blank"><i class="fab fa-pinterest"></i></i></a></li>
	<?php endif ?>
	<?php if ($block->getIsGoogleEnabled()):?>
		<li><a href="https://plus.google.com/share?url=<?php echo urlencode($block->escapeUrl($currentUrl)); ?>" target="_blank"><i class="fab fa-google-plus-g"></i></a></li>
	<?php endif ?>
	<?php if ($block->getIsPrintEnabled()):?>
		<li>
			<a href="javascript:window.print()" target="_blank" title="<?php echo __('Share on Print')?>" class="share-link-print"><i class="fas fa-print"></i></a>
		</li>
	<?php endif ?>
	</ul>
</div>