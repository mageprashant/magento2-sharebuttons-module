<?php $currentUrl = $block->getUrl('*/*/*', ['_current' => true, '_use_rewrite' => true]);	 ?>
<?php $productName = $block->getProductName(); ?>
<div class="share-buttons">
	<div class="social-message"><?php echo __('Share:')?></div>
	<ul class="social">
	<?php if ($block->getIsFacebookEnabled()):?>
		<li><a href="https://www.facebook.com/sharer.php?u=<?php echo urlencode($block->escapeUrl($currentUrl)); ?>" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
